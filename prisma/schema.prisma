generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Ingredient {
  id                Int                 @id @default(autoincrement())
  name              String              @unique(map: "Ingredient_name_key")
  productIngredient ProductIngredient[]
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

model Address {
  id         Int     @id @default(autoincrement())
  fullName   String
  street     String
  city       String
  postalCode String
  // country    String?  @default("Poland")
  userId     String? @unique
  user       User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders     Order[]
}

model Order {
  id            Int            @id @default(autoincrement())
  createdAt     DateTime       @default(now())
  status        OrderStatus    @default(PENDING)
  orderProducts OrderProduct[]
  user          User?          @relation(fields: [userId], references: [id])
  userId        String?
  totalPrice    Float
  notes         String?
  paymentMethod String
  deliveryTime  DateTime?
  addressId     Int?
  address       Address?       @relation(fields: [addressId], references: [id])
  isPaid        Boolean        @default(false)

  @@index([userId], map: "Order_userId_fkey")
}

model OrderProduct {
  orderId   Int
  productId String
  quantity  Int     @default(1)
  size      String  @default("M") // Default size if not specified
  price     Float // Add this field to store the price for the selected size
  order     Order   @relation(fields: [orderId], references: [id], map: "OrderProduct_orderId_fkey")
  product   Product @relation(fields: [productId], references: [id], map: "OrderProduct_productId_fkey")

  @@id([orderId, productId, size])
  @@index([productId], map: "OrderProduct_productId_fkey")
}

model Product {
  id                String              @id @default(cuid())
  name              String              @unique(map: "Product_name_key")
  description       String?
  imageUrl          String?
  category          ProductCategory
  orderProduct      OrderProduct[]
  productIngredient ProductIngredient[]
  productSize       ProductSize[]
}

model ProductIngredient {
  productId    String
  ingredientId Int
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], map: "ProductIngredient_ingredientId_fkey")
  product      Product    @relation(fields: [productId], references: [id], map: "ProductIngredient_productId_fkey")

  @@id([productId, ingredientId])
  @@index([ingredientId], map: "ProductIngredient_ingredientId_fkey")
}

model ProductSize {
  productId String
  sizeName  String
  price     Float
  product   Product @relation(fields: [productId], references: [id], map: "ProductSize_productId_fkey")

  @@id([productId, sizeName])
  @@index([sizeName], map: "ProductSize_sizeName_idx")
}

enum ProductCategory {
  PIZZA
  DRINK
  SAUCE
}

// NextAuth models
enum Role {
  USER
  ADMIN
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String? // dla Credentials login
  phone          String?
  role           Role      @default(USER)
  verified       DateTime?
  accounts       Account[] // One user can have multiple OAuth providers
  sessions       Session[]
  addresses      Address[]
  orders         Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
